<div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
  <div class="text-center mb-8">
    <div class="text-5xl mb-4">🔐</div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome Back</h1>
    <p class="text-gray-600">Sign in to your TechStackr account</p>
  </div>

  <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :username, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
        <span class="flex items-center gap-2">
          <span>👤</span>
          <span>Username</span>
        </span>
      <% end %>
      <%= form.text_field :username, required: true, autofocus: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all", placeholder: "Enter your username" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
        <span class="flex items-center gap-2">
          <span>🔒</span>
          <span>Password</span>
        </span>
      <% end %>
      <%= form.password_field :password, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all", placeholder: "Enter your password" %>
    </div>

    <div>
      <%= form.submit "Sign In", class: "w-full btn btn-primary btn-lg hover-lift" %>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <p class="text-gray-600">
      Don't have an account?
      <%= link_to "Sign up here", signup_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold ml-1" %>
    </p>
  </div>
</div>
