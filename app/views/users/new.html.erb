<div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
  <div class="text-center mb-8">
    <div class="text-5xl mb-4">🚀</div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Account</h1>
    <p class="text-gray-600">Join TechStackr and get AI-powered recommendations</p>
  </div>

  <%= form_with model: @user, url: signup_path, local: true, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
        <div class="flex items-start gap-3">
          <span class="text-red-500 text-xl">⚠️</span>
          <div class="flex-1">
            <h3 class="text-red-800 font-semibold mb-2">
              <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :username, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
        <span class="flex items-center gap-2">
          <span>👤</span>
          <span>Username</span>
        </span>
      <% end %>
      <%= form.text_field :username, required: true, autofocus: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all", placeholder: "Choose a username" %>
      <p class="mt-1 text-sm text-gray-500">Minimum 3 characters</p>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
        <span class="flex items-center gap-2">
          <span>🔒</span>
          <span>Password</span>
        </span>
      <% end %>
      <%= form.password_field :password, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all", placeholder: "Create a password" %>
      <p class="mt-1 text-sm text-gray-500">Minimum 6 characters</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700 mb-2" do %>
        <span class="flex items-center gap-2">
          <span>🔐</span>
          <span>Confirm Password</span>
        </span>
      <% end %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all", placeholder: "Confirm your password" %>
    </div>

    <div>
      <%= form.submit "Create Account", class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 rounded-lg transition-all shadow-lg hover:shadow-xl" %>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <p class="text-gray-600">
      Already have an account?
      <%= link_to "Sign in here", login_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold ml-1" %>
    </p>
  </div>
</div>
