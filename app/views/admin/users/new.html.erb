<div class="max-w-2xl mx-auto">
  <div class="dashboard-header mb-6">
    <div class="breadcrumb">Pages / Admin / User Management</div>
    <h1 class="page-title">Create New User</h1>
    <p class="text-blue-100 mt-2">Add a new user to the system</p>
  </div>
  
  <div class="form-card">

    <%= form_with model: [ :admin, @user ], local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
          <div class="flex items-start gap-3">
            <span class="text-red-500 text-xl">⚠️</span>
            <div class="flex-1">
              <h3 class="text-red-800 font-semibold mb-2">
                <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
              </h3>
              <ul class="list-disc list-inside text-red-700 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :username, class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= form.text_field :username, required: true, autofocus: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all" %>
        <p class="mt-1 text-sm text-gray-500">Minimum 3 characters</p>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= form.password_field :password, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all" %>
        <p class="mt-1 text-sm text-gray-500">Minimum 6 characters</p>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all" %>
      </div>

      <div>
        <%= form.label :role, class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= form.select :role, User.roles.keys.map { |role| [ role.titleize, role ] }, {}, { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all bg-white" } %>
        <p class="mt-1 text-sm text-gray-500">Select user role</p>
      </div>

      <div class="flex gap-4 pt-4">
        <%= form.submit "Create User", class: "flex-1 btn btn-success btn-lg hover-lift" %>
        <%= link_to "Cancel", admin_users_path, class: "flex-1 btn btn-ghost btn-lg hover-lift text-center" %>
      </div>
    <% end %>
  </div>
</div>
