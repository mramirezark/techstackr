<% content_for :title, "User Management - TechStackr" %>

<div class="card-header animate-fade-in">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-gradient text-3xl font-bold mb-2 text-shadow">User Management</h1>
      <p class="text-gray-300">Manage users and their roles in the system</p>
    </div>
    <%= link_to new_admin_user_path, { class: "btn btn-primary btn-lg hover-lift" } do %>
      <span class="text-xl">➕</span>
      <span>Add User</span>
    <% end %>
  </div>
</div>

<div class="card-table animate-slide-up">
  <div class="table-container">
    <table class="table">
      <thead class="table-header">
        <tr>
          <th class="table-header-cell w-2/5">Username</th>
          <th class="table-header-cell text-center w-32">Role</th>
          <th class="table-header-cell text-center w-24">Projects</th>
          <th class="table-header-cell w-32">Created</th>
          <th class="table-header-cell text-center w-32">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr class="table-row animate-fade-in" style="animation-delay: <%= index * 0.1 %>s;">
            <td class="table-cell-title">
              <div class="flex items-center gap-3">
                <div class="user-avatar hover-lift">
                  <%= user.username.first.upcase %>
                </div>
                <div class="flex flex-col">
                  <span class="font-semibold text-white text-sm"><%= user.username %></span>
                  <% if user == current_user %>
                    <span class="badge badge-primary badge-sm">You</span>
                  <% else %>
                    <span class="text-xs text-gray-400">ID: <%= user.id %></span>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="table-cell-compact text-center">
              <% if user.admin? %>
                <span class="badge badge-primary badge-sm">👑 ADMIN</span>
              <% else %>
                <span class="badge badge-success badge-sm">👤 USER</span>
              <% end %>
            </td>
            <td class="table-cell-compact text-center">
              <span class="text-lg font-bold text-white"><%= user.projects.count %></span>
            </td>
            <td class="table-cell-compact">
              <span class="text-xs text-gray-400"><%= user.created_at.strftime("%b %d") %></span>
            </td>
            <td class="table-cell-compact text-center">
              <div class="flex justify-center gap-2">
                <%= link_to edit_admin_user_path(user), { class: "btn btn-ghost btn-sm hover-lift" } do %>
                  <span>✏️</span>
                <% end %>
                <% unless user == current_user %>
                  <%= button_to admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user.username}?" }, class: "btn btn-ghost btn-sm hover-lift" do %>
                    <span>🗑️</span>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @users.empty? %>
    <div class="card-empty animate-scale-in">
      <div class="max-w-md mx-auto">
        <div class="text-6xl mb-6">👥</div>
        <h2 class="text-2xl font-bold text-white mb-3 text-shadow">No users found</h2>
        <p class="text-gray-300 mb-8">Get started by adding your first user to the system.</p>
        <%= link_to new_admin_user_path, { class: "btn btn-primary btn-xl hover-lift" } do %>
          <span class="text-2xl">👤</span>
          <span>Add First User</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>