<% content_for :title, "User Management - TechStackr" %>

<!-- Modal Container -->
<div id="modal-content"></div>

<div class="dashboard-header animate-fade-in">
  <div class="breadcrumb">Pages / Admin / User Management</div>
  <div class="flex justify-between items-center">
    <h1 class="page-title">User Management</h1>
    <button class="btn btn-accent btn-lg hover-lift" data-action="showNewUserModal">
      <span class="text-xl">â•</span>
      <span>User</span>
    </button>
  </div>
  <p class="text-blue-100 mt-2">Manage users and their roles in the system</p>
</div>

<div class="card-table animate-slide-up">
  <div class="table-container">
    <table class="table">
      <thead class="table-header">
        <tr>
          <th class="table-header-cell w-2/5">Username</th>
          <th class="table-header-cell text-center w-32">Role</th>
          <th class="table-header-cell text-center w-24">Projects</th>
          <th class="table-header-cell w-32">Created</th>
          <th class="table-header-cell text-center w-32">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr class="table-row animate-fade-in" style="animation-delay: <%= index * 0.1 %>s;">
            <td class="table-cell-title">
              <div class="flex items-center gap-3">
                <div class="user-avatar hover-lift">
                  <%= user.username.first.upcase %>
                </div>
                <div class="flex flex-col">
                  <span class="font-semibold text-gray-900 text-sm"><%= user.username %></span>
                  <% if user == current_user %>
                    <span class="badge badge-primary badge-sm">You</span>
                  <% else %>
                    <span class="text-xs text-gray-600">ID: <%= user.id %></span>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="table-cell-compact text-center">
              <% if user.admin? %>
                <span class="badge badge-primary badge-sm">ğŸ‘‘ ADMIN</span>
              <% else %>
                <span class="badge badge-success badge-sm">ğŸ‘¤ USER</span>
              <% end %>
            </td>
            <td class="table-cell-compact text-center">
              <span class="text-lg font-bold text-gray-900"><%= user.projects.count %></span>
            </td>
            <td class="table-cell-compact">
              <span class="text-xs text-gray-600"><%= user.created_at.strftime("%b %d, %Y") %></span>
            </td>
            <td class="table-cell-compact text-center">
              <div class="flex justify-center gap-2">
                <button class="btn btn-ghost btn-sm hover-lift" 
                        data-action="showEditUserModal" 
                        data-user-id="<%= user.id %>"
                        data-username="<%= user.username %>">
                  <span>âœï¸</span>
                </button>
                <% unless user == current_user %>
                  <button class="btn btn-ghost btn-sm hover-lift" 
                          data-action="showDeleteUserModal" 
                          data-user-id="<%= user.id %>"
                          data-username="<%= user.username %>">
                    <span>ğŸ—‘ï¸</span>
                  </button>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @users.empty? %>
    <div class="card-empty animate-scale-in">
      <div class="max-w-md mx-auto">
        <div class="text-6xl mb-6">ğŸ‘¥</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-3">No users found</h2>
        <p class="text-gray-600 mb-8">Get started by adding your first user to the system.</p>
        <button class="btn btn-accent btn-xl hover-lift" data-action="showNewUserModal">
          <span class="text-2xl">ğŸ‘¤</span>
          <span>Add First User</span>
        </button>
      </div>
    </div>
  <% end %>
</div>