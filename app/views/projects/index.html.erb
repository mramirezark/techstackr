<% content_for :title, "Projects - TechStackr" %>

<!-- Modal Container -->
<div id="modal-content"></div>

<div class="card-header animate-fade-in">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-gradient text-3xl font-bold mb-2 text-shadow">Your Projects</h1>
      <p class="text-gray-300">Create projects and get AI-powered technology stack recommendations</p>
    </div>
    <%= link_to new_project_path, { class: "btn btn-primary btn-lg hover-lift" } do %>
      <span class="text-xl">➕</span>
      <span>New Project</span>
    <% end %>
  </div>
</div>

<% if @projects.any? %>
  <div class="card-table animate-slide-up">
    <div class="table-container">
      <table class="table">
        <thead class="table-header">
          <tr>
            <th class="table-header-cell w-2/5">Project</th>
            <th class="table-header-cell w-32">Industry</th>
            <th class="table-header-cell w-36">Type</th>
            <th class="table-header-cell text-center w-24">Team</th>
            <th class="table-header-cell text-center w-28">Status</th>
            <th class="table-header-cell w-32">Created</th>
            <th class="table-header-cell text-center w-24">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each_with_index do |project, index| %>
            <tr class="table-row animate-fade-in" style="animation-delay: <%= index * 0.1 %>s;">
              <td class="table-cell-title">
                <div class="flex flex-col">
                  <span class="font-semibold text-white text-sm"><%= project.title %></span>
                  <span class="table-cell-description"><%= truncate(project.description, length: 60) %></span>
                </div>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-primary badge-sm">
                  <%= project.industry %>
                </span>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-secondary badge-sm">
                  <%= project.project_type.gsub('_', ' ').titleize %>
                </span>
              </td>
              <td class="table-cell-compact text-center">
                <div class="flex flex-col items-center">
                  <span class="text-sm font-bold text-white"><%= project.estimated_team_size %></span>
                  <span class="text-xs text-gray-400"><%= project.estimated_team_size == 1 ? 'person' : 'people' %></span>
                </div>
              </td>
              <td class="table-cell-compact text-center">
                <% case project.status %>
                <% when "pending" %>
                  <span class="badge badge-warning badge-sm">⏳ Pending</span>
                <% when "processing" %>
                  <span class="badge badge-info badge-sm">⚙️ Processing</span>
                <% when "completed" %>
                  <span class="badge badge-success badge-sm">✓ Completed</span>
                <% when "failed" %>
                  <span class="badge badge-danger badge-sm">✗ Failed</span>
                <% end %>
              </td>
              <td class="table-cell-compact">
                <span class="text-xs text-gray-400"><%= project.created_at.strftime("%b %d") %></span>
              </td>
              <td class="table-cell-compact text-center">
                <button 
                  class="btn btn-ghost btn-sm hover-lift" 
                  data-action="showProjectDetails"
                  data-project-id="<%= project.id %>"
                >
                  <span>👁️</span>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Summary Statistics -->
    <div class="summary-bar">
      <div class="flex justify-between items-center text-sm">
        <div class="summary-stat">
          <span class="summary-label">Total Projects:</span>
          <span class="summary-badge summary-badge-primary"><%= @projects.count %></span>
        </div>
        <div class="summary-stat">
          <span class="summary-label">Industries:</span>
          <span class="summary-badge summary-badge-secondary"><%= @projects.pluck(:industry).uniq.count %></span>
        </div>
        <div class="summary-stat">
          <span class="summary-label">Total Team Members:</span>
          <span class="summary-badge summary-badge-accent"><%= @projects.sum(:estimated_team_size) %></span>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="card-empty animate-scale-in">
    <div class="max-w-md mx-auto">
      <div class="text-6xl mb-6">📋</div>
      <h2 class="text-2xl font-bold text-white mb-3 text-shadow">No projects yet</h2>
      <p class="text-gray-300 mb-8">Get started by creating your first project and receive AI-powered recommendations tailored to your needs!</p>
      <%= link_to new_project_path, { class: "btn btn-primary btn-xl hover-lift" } do %>
        <span class="text-2xl">🚀</span>
        <span>Create Your First Project</span>
      <% end %>
    </div>
  </div>
<% end %>
