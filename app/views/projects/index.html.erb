<% content_for :title, "Projects - TechStackr" %>

<div class="card">
  <h1>Your Projects</h1>
  <p style="margin-bottom: 2rem; color: #666;">Create a new project to get AI-powered technology stack recommendations</p>
  
  <%= link_to "Create New Project", new_project_path, class: "btn btn-primary" %>
</div>

<% if @projects.any? %>
  <div class="project-grid">
    <% @projects.each do |project| %>
      <div class="project-card">
        <h3><%= project.title %></h3>
        <p style="color: #666; margin: 0.5rem 0;"><%= truncate(project.description, length: 100) %></p>
        <p style="margin: 0.5rem 0;"><strong>Type:</strong> <%= project.project_type %></p>
        <p style="margin: 0.5rem 0;">
          <span class="status-badge status-<%= project.status %>">
            <%= project.status.titleize %>
          </span>
        </p>
        <div style="margin-top: 1rem;">
          <%= link_to "View Details", project_path(project), class: "btn btn-primary", style: "font-size: 0.875rem; padding: 0.5rem 1rem;" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card" style="text-align: center; padding: 3rem;">
    <h2 style="color: #666;">No projects yet</h2>
    <p style="color: #999; margin: 1rem 0;">Get started by creating your first project!</p>
    <%= link_to "Create Your First Project", new_project_path, class: "btn btn-success" %>
  </div>
<% end %>
