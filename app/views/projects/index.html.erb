<% content_for :title, "Projects - TechStackr" %>

<!-- Modal Container -->
<div id="modal-content"></div>

<!-- New Project Modal Container -->
<div id="new-project-modal-content"></div>

<div class="dashboard-header animate-fade-in">
  <div class="breadcrumb">Pages / Projects</div>
  <div class="flex justify-between items-center">
    <h1 class="page-title">Your Projects</h1>
    <button class="btn btn-accent btn-lg hover-lift" data-action="showNewProjectModal">
      <span class="text-xl">➕</span>
      <span>Project</span>
    </button>
  </div>
  <p class="text-blue-100 mt-2">Create projects and get AI-powered technology stack recommendations</p>
</div>

<% if @projects.any? %>
  <div class="card-table animate-slide-up">
    <div class="table-container">
      <table class="table">
        <thead class="table-header">
          <tr>
            <th class="table-header-cell w-1/3">Project</th>
            <th class="table-header-cell w-16">Industry</th>
            <th class="table-header-cell w-20">Type</th>
            <th class="table-header-cell text-center w-14">Team</th>
            <th class="table-header-cell w-16">Timeline</th>
            <th class="table-header-cell text-center w-16">Status</th>
            <th class="table-header-cell w-16">Created</th>
            <th class="table-header-cell text-center w-14">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each_with_index do |project, index| %>
            <tr class="table-row animate-fade-in" style="animation-delay: <%= index * 0.1 %>s;">
              <td class="table-cell-title">
                <div class="flex flex-col">
                  <span class="font-semibold text-gray-900 text-sm"><%= project.title %></span>
                  <span class="table-cell-description text-xs"><%= truncate(project.description, length: 60) %></span>
                </div>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-primary badge-xs text-xs">
                  <%= project.industry %>
                </span>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-secondary badge-xs text-xs">
                  <%= project.project_type.gsub('_', ' ').titleize %>
                </span>
              </td>
              <td class="table-cell-compact text-center">
                <% if project.recommendation&.recommended_team_size.present? %>
                  <div class="flex flex-col items-center">
                    <span class="text-xs font-bold text-gray-900"><%= project.recommendation.recommended_team_size %></span>
                    <span class="text-xs text-gray-600"><%= project.recommendation.recommended_team_size == 1 ? 'person' : 'people' %></span>
                  </div>
                <% else %>
                  <span class="text-gray-400 text-xs">—</span>
                <% end %>
              </td>
              <td class="table-cell-compact">
                <% if project.recommendation&.estimated_timeline.present? %>
                  <span class="badge badge-warning badge-xs text-xs">
                    ⏱️ <%= project.recommendation.estimated_timeline %>
                  </span>
                <% else %>
                  <span class="text-gray-400 text-xs">—</span>
                <% end %>
              </td>
              <td class="table-cell-compact text-center">
                <% case project.status %>
                <% when "pending" %>
                  <span class="badge badge-warning badge-xs text-xs">⏳ Pending</span>
                <% when "processing" %>
                  <span class="badge badge-info badge-xs text-xs">⚙️ Processing</span>
                <% when "completed" %>
                  <span class="badge badge-success badge-xs text-xs">✓ Completed</span>
                <% when "failed" %>
                  <span class="badge badge-danger badge-xs text-xs">✗ Failed</span>
                <% end %>
              </td>
              <td class="table-cell-compact">
                <span class="text-xs text-gray-600"><%= project.created_at.strftime("%b %d, %Y") %></span>
              </td>
              <td class="table-cell-compact text-center">
                <div class="flex justify-center gap-0.5">
                  <button 
                    class="btn btn-ghost btn-xs hover-lift p-1" 
                    data-action="showProjectDetails"
                    data-project-id="<%= project.id %>"
                    title="View Details"
                  >
                    <span class="text-[10px]">👁️</span>
                  </button>
                  <button 
                    class="btn btn-ghost btn-xs hover-lift p-1" 
                    data-action="showEditProjectModal"
                    data-project-id="<%= project.id %>"
                    data-project-title="<%= project.title %>"
                    title="Edit Project"
                  >
                    <span class="text-[10px]">✏️</span>
                  </button>
                  <button 
                    class="btn btn-ghost btn-xs hover-lift p-1 text-red-600" 
                    data-action="showDeleteProjectModal"
                    data-project-id="<%= project.id %>"
                    data-project-title="<%= project.title %>"
                    title="Delete Project"
                  >
                    <span class="text-[10px]">🗑️</span>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @projects.total_pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%= paginate @projects, 
            theme: 'default',
            window: 2,
            outer_window: 1,
            left: 0,
            right: 0
        %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card-empty animate-scale-in">
    <div class="max-w-md mx-auto">
      <div class="text-6xl mb-6">📋</div>
      <h2 class="text-2xl font-bold text-gray-900 mb-3">No projects yet</h2>
      <p class="text-gray-600 mb-8">Get started by creating your first project and receive AI-powered recommendations tailored to your needs!</p>
      <button class="btn btn-accent btn-xl hover-lift" data-action="showNewProjectModal">
        <span class="text-2xl">🚀</span>
        <span>Create Your First Project</span>
      </button>
    </div>
  </div>
<% end %>
