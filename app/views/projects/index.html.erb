<% content_for :title, "Projects - TechStackr" %>

<!-- Modal Container -->
<div id="modal-content"></div>

<!-- New Project Modal Container -->
<div id="new-project-modal-content"></div>

<div class="dashboard-header animate-fade-in">
  <div class="breadcrumb">Pages / Projects</div>
  <div class="flex justify-between items-center">
    <h1 class="page-title">Your Projects</h1>
    <button class="btn btn-accent btn-lg hover-lift" data-action="showNewProjectModal">
      <span class="text-xl">➕</span>
      <span>Project</span>
    </button>
  </div>
  <p class="text-blue-100 mt-2">Create projects and get AI-powered technology stack recommendations</p>
</div>

<% if @projects.any? %>
  <div class="card-table animate-slide-up">
    <div class="table-container">
      <table class="table">
        <thead class="table-header">
          <tr>
            <th class="table-header-cell w-2/5">Project</th>
            <th class="table-header-cell w-32">Industry</th>
            <th class="table-header-cell w-36">Type</th>
            <th class="table-header-cell text-center w-24">Team</th>
            <th class="table-header-cell text-center w-28">Status</th>
            <th class="table-header-cell w-32">Created</th>
            <th class="table-header-cell text-center w-24">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each_with_index do |project, index| %>
            <tr class="table-row animate-fade-in" style="animation-delay: <%= index * 0.1 %>s;">
              <td class="table-cell-title">
                <div class="flex flex-col">
                  <span class="font-semibold text-gray-900 text-sm"><%= project.title %></span>
                  <span class="table-cell-description"><%= truncate(project.description, length: 60) %></span>
                </div>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-primary badge-sm">
                  <%= project.industry %>
                </span>
              </td>
              <td class="table-cell-compact">
                <span class="badge badge-secondary badge-sm">
                  <%= project.project_type.gsub('_', ' ').titleize %>
                </span>
              </td>
              <td class="table-cell-compact text-center">
                <div class="flex flex-col items-center">
                  <span class="text-sm font-bold text-gray-900"><%= project.estimated_team_size %></span>
                  <span class="text-xs text-gray-600"><%= project.estimated_team_size == 1 ? 'person' : 'people' %></span>
                </div>
              </td>
              <td class="table-cell-compact text-center">
                <% case project.status %>
                <% when "pending" %>
                  <span class="badge badge-warning badge-sm">⏳ Pending</span>
                <% when "processing" %>
                  <span class="badge badge-info badge-sm">⚙️ Processing</span>
                <% when "completed" %>
                  <span class="badge badge-success badge-sm">✓ Completed</span>
                <% when "failed" %>
                  <span class="badge badge-danger badge-sm">✗ Failed</span>
                <% end %>
              </td>
              <td class="table-cell-compact">
                <span class="text-xs text-gray-600"><%= project.created_at.strftime("%b %d, %Y") %></span>
              </td>
              <td class="table-cell-compact text-center">
                <div class="flex justify-center gap-1">
                  <button 
                    class="btn btn-ghost btn-sm hover-lift" 
                    data-action="showProjectDetails"
                    data-project-id="<%= project.id %>"
                    title="View Details"
                  >
                    <span>👁️</span>
                  </button>
                  <button 
                    class="btn btn-ghost btn-sm hover-lift" 
                    data-action="showEditProjectModal"
                    data-project-id="<%= project.id %>"
                    data-project-title="<%= project.title %>"
                    title="Edit Project"
                  >
                    <span>✏️</span>
                  </button>
                  <button 
                    class="btn btn-ghost btn-sm hover-lift text-red-600" 
                    data-action="showDeleteProjectModal"
                    data-project-id="<%= project.id %>"
                    data-project-title="<%= project.title %>"
                    title="Delete Project"
                  >
                    <span>🗑️</span>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @projects.total_pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%= paginate @projects, theme: 'twitter' %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card-empty animate-scale-in">
    <div class="max-w-md mx-auto">
      <div class="text-6xl mb-6">📋</div>
      <h2 class="text-2xl font-bold text-gray-900 mb-3">No projects yet</h2>
      <p class="text-gray-600 mb-8">Get started by creating your first project and receive AI-powered recommendations tailored to your needs!</p>
      <button class="btn btn-accent btn-xl hover-lift" data-action="showNewProjectModal">
        <span class="text-2xl">🚀</span>
        <span>Create Your First Project</span>
      </button>
    </div>
  </div>
<% end %>
