<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "TechStackr - AI Technology Recommendations" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <!-- Top Navigation Bar -->
    <nav class="navbar">
      <div class="container-custom">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-4">
            <h1 class="text-2xl font-bold text-gray-900 tracking-tight">ðŸš€ Tech Stack Recommendations</h1>
          </div>
          <div class="flex items-center gap-4">
            <% if logged_in? %> 
              <div class="user-info">
                <span class="text-gray-700 font-medium">ðŸ‘¤ <%= current_user.username %></span>
                <% if admin? %>
                  <span class="user-badge-admin">ADMIN</span>
                <% end %>
              </div>
              <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-ghost btn-sm hover-lift" %>
            <% else %>
              <%= link_to "Login", login_path, class: "btn btn-ghost btn-sm hover-lift" %>
              <%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-sm hover-lift" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Layout with Sidebar -->
    <% if logged_in? %>
      <div class="flex min-h-[calc(100vh-4rem)]">
        <!-- Left Sidebar Navigation -->
        <aside class="sidebar">
          <nav class="py-6">
            <h3 class="nav-section">Navigation</h3>
            
            <%= link_to root_path, { class: "#{current_page?(root_path) ? 'nav-link nav-link-active' : 'nav-link'}" } do %>
              <span class="text-xl">ðŸ“Š</span>
              <span class="font-medium">Projects</span>
            <% end %>

            <%= link_to dashboard_path, { class: "#{current_page?(dashboard_path) ? 'nav-link nav-link-active' : 'nav-link'}" } do %>
              <span class="text-xl">ðŸ¤–</span>
              <span class="font-medium">AI Dashboard</span>
            <% end %>
            
            <% if admin? %>
              <h3 class="nav-section">Admin</h3>
              
              <%= link_to admin_users_path, { class: "#{current_page?(admin_users_path) || request.path.start_with?('/admin/users') ? 'nav-link nav-link-active' : 'nav-link'}" } do %>
                <span class="text-xl">ðŸ‘¥</span>
                <span class="font-medium">User Management</span>
              <% end %>
            <% end %>
          </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
          <div class="container-custom py-6">
            <% if notice %>
              <div class="alert alert-success animate-fade-in">
                <div class="flex items-center gap-2">
                  <span class="alert-icon">âœ“</span>
                  <span><%= notice %></span>
                </div>
              </div>
            <% end %>
            <% if alert %>
              <div class="alert alert-error animate-fade-in">
                <div class="flex items-center gap-2">
                  <span class="alert-icon">âš </span>
                  <span><%= alert %></span>
                </div>
              </div>
            <% end %>
            
            <%= yield %>
          </div>
        </main>
      </div>
    <% else %>
      <!-- No sidebar for logged out users -->
      <div class="min-h-screen bg-gradient-to-br from-slate-900/30 via-indigo-900/30 to-purple-900/30 backdrop-blur-sm">
        <div class="max-w-md mx-auto pt-12 px-4">
          <% if notice %>
            <div class="alert alert-success animate-fade-in">
              <div class="flex items-center gap-2">
                <span class="alert-icon">âœ“</span>
                <span><%= notice %></span>
              </div>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-error animate-fade-in">
              <div class="flex items-center gap-2">
                <span class="alert-icon">âš </span>
                <span><%= alert %></span>
              </div>
            </div>
          <% end %>
          
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
